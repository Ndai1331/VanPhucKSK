@page "/admin/danh-sach-doan-ho-so-kham-suc-khoe"
@page "/admin/danh-sach-doan-ho-so-kham-suc-khoe/{id:int}"
@using CoreAdminWeb.Commons.Helpers
@using CoreAdminWeb.Commons.Utils
@using CoreAdminWeb.Extensions
@using CoreAdminWeb.Helpers
@using CoreAdminWeb.Model
@using CoreAdminWeb.Model.KhamSucKhoes
@using CoreAdminWeb.Services.BaseServices
@using CoreAdminWeb.Shared.Base
@inherits BlazorCoreBase
@layout Shared.Layout.AdminLayout

<PageHeader Title="Hồ sơ đoàn KSK" pTitle="Hồ sơ đoàn KSK"></PageHeader>

<!-- Start All Card -->
<div class="flex flex-col gap-4 min-h-[calc(100vh-212px)]">
    <div class="grid grid-cols-1 gap-4">
        <div class="card mb-10">
            @if (IsLoading)
            {
                <div class="flex flex-col items-center justify-center gap-3">
                    <div class="w-full h-4 rounded-full bg-gray-200">
                        <div class="h-4 rounded-full bg-success animate-progress"
                             style="background-image: linear-gradient(45deg,hsla(0,0%,100%,.15) 25%,transparent 0,transparent 50%,hsla(0,0%,100%,.15) 0,hsla(0,0%,100%,.15) 75%,transparent 0,transparent); background-size: 1rem 1rem;">
                        </div>
                    </div>
                </div>
            }

            <div class="flex items-end justify-between flex-1 gap-2 sm:gap-4">
                <!-- Left: Filter Area -->
                <div class="w-full grid grid-cols-1 gap-4 md:grid-cols-4 xl:grid-cols-4 sm:gap-4 pb-2">
                    <div class="xs:col-span-4 sm:col-span-4 md:col-span-1 xl:col-span-1">
                        <MudText Typo="Typo.h2" Class="mb-1 text-base font-semibold capitalize text-slate-800 dark:text-slate-100">Ngày</MudText>
                        <div class="flex items-center gap-2 sm:gap-4">
                            <input type="text"
                                class="form-input date-picker w-1/2"
                                placeholder="Từ ngày"
                                value="@(_fromDate?.ToString("dd/MM/yyyy"))"
                                @onchange="@(e => OnDateChanged(e, nameof(_fromDate), true))" />
                            <span class="mx-2 flex items-center text-gray-500">-</span>
                            <input type="text"
                                class="form-input date-picker w-1/2"
                                placeholder="Đến ngày"
                                value="@(_toDate?.ToString("dd/MM/yyyy"))"
                                @onchange="@(e => OnDateChanged(e, nameof(_toDate), true))" />
                        </div>
                    </div>
                    <div class="xs:col-span-4 sm:col-span-4 md:col-span-1 xl:col-span-1">
                        <MudText Typo="Typo.h2" Class="mb-1 text-base font-semibold capitalize text-slate-800 dark:text-slate-100">Tên công ty</MudText>
                        <BlazoredTypeahead EnableDropDown="true"
                                        ShowDropDownOnFocus="true"
                                        MinimumLength="0"
                                        TItem="CongTyModel"
                                        TValue="CongTyModel"
                                        SearchMethod="LoaCongTyFilterData"
                                        Value="_selectedCongTyFilter"
                                        ValueExpression="@(() => _selectedCongTyFilter)"
                                        ValueChanged="OnCongTyFilterChanged"
                                        placeholder="Chọn công ty"
                                        Class="form-select">
                            <SelectedTemplate Context="item">
                                @item.name
                            </SelectedTemplate>
                            <ResultTemplate Context="item">
                                @item.name
                            </ResultTemplate>
                            <NotFoundTemplate Context="item">
                                Không tìm thấy dữ liệu
                            </NotFoundTemplate>
                        </BlazoredTypeahead>
                    </div>
                    <div class="xs:col-span-4 sm:col-span-4 md:col-span-1 xl:col-span-1">
                        <MudText Typo="Typo.h2" Class="mb-1 text-base font-semibold capitalize text-slate-800 dark:text-slate-100">Mã hồ sơ</MudText>
                        <BlazoredTypeahead EnableDropDown="true"
                                        ShowDropDownOnFocus="true"
                                        MinimumLength="0"
                                        TItem="KhamSucKhoeCongTyModel"
                                        TValue="KhamSucKhoeCongTyModel"
                                        SearchMethod="LoadKhamSucKhoeCongTyData"
                                        Value="_selectedKhamSucKhoeCongTyFilter"
                                        ValueExpression="@(() => _selectedKhamSucKhoeCongTyFilter)"
                                        ValueChanged="OnKhamSucKhoeCongTyFilterChanged"
                                        placeholder="Chọn hồ sơ khám sức khỏe"
                                        Class="form-select">
                            <SelectedTemplate Context="item">
                                @item.code
                            </SelectedTemplate>
                            <ResultTemplate Context="item">
                                @item.code
                            </ResultTemplate>
                            <NotFoundTemplate Context="item">
                                Không tìm thấy dữ liệu
                            </NotFoundTemplate>
                        </BlazoredTypeahead>
                    </div>

                    <div class="flex items-end justify-end xs:col-span-4 sm:col-span-4 md:col-span-1 xl:col-span-1 gap-2">
                        @* <div> *@
                            <MudButton Class="xs:w-full sm:w-auto md:w-auto btn flex items-center gap-1.5
                            bg-success border-success text-white hover:bg-success/[0.85]
                            hover:border-success/[0.85] text-nowrap" @onclick="@(e => LoadData())">
                                <i class="ri-search-line"></i>
                                Thống kê
                            </MudButton>
                            <MudButton Class="xs:w-full sm:w-auto md:w-auto btn flex items-center gap-1.5
                            bg-info border-info text-white hover:bg-info/[0.85] hover:border-info/[0.85]
                            text-nowrap" OnClick="OnExcelExport">
                                <i class="ri-file-excel-2-fill"></i>
                                Xuất excel
                            </MudButton>
                        @* </div> *@
                    </div>
                </div>
            </div>

            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table id="example" class="display frozen-columns-table" style="width:100%">
                    <thead>
                        <tr>
                            <th class="frozen-col frozen-col-1">STT</th>
                            <th class="frozen-col frozen-col-2">Mã đoàn</th>
                            <th class="frozen-col frozen-col-3">Họ và tên</th>
                            <th class="frozen-col frozen-col-4">Năm sinh</th>
                            <th class="frozen-col frozen-col-5">Giới tính</th>
                            <th>Tiền sử gia đình</th>
                            <th>Tiền sử bản thân</th>
                            <th>Chiều cao (cm)</th>
                            <th>Cân nặng (kg)</th>
                            <th>BMI</th>
                            <th>Mạch (lần/phút)</th>
                            <th>Huyết áp (mmHg)</th>
                            <th>Tuần hoàn</th>
                            <th>Hô hấp</th>
                            <th>Tiêu hóa</th>
                            <th>Thận-Tiết niệu</th>
                            <th>Nội tiết</th>
                            <th>Cơ-xương-khớp</th>
                            <th>Thần kinh</th>
                            <th>Tâm thần</th>
                            <th>Ngoại khoa</th>
                            <th>Sản phụ khoa</th>
                            <th>Mắt</th>
                            <th>Tai - Mũi - Họng</th>
                            <th>Răng - Hàm - Mặt</th>
                            <th>Da liễu</th>
                            @* <th>X-quang ngực thẳng</th>
                            <th>X-quang CSC thẳng - nghiêng</th>
                            <th>Siêu âm bụng</th>
                            <th>Siêu âm tuyến giáp</th>
                            <th>Siêu âm Doppler tim</th>
                            <th>Siêu âm tuyến vú</th>
                            <th>Huyết học</th> *@
                            <th>Cận lâm sàn</th>
                            <th>Phân loại sức khỏe</th>
                            <th>Các bệnh tật</th>
                            <th>Đề nghị</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in MainModels.Select((v, i) => new { Data = v, Index = i }))
                        {
                            <tr>
                                <td class="frozen-col frozen-col-1">@(((Page - 1) * PageSize) + item.Index + 1)</td>
                                <td class="frozen-col frozen-col-2">@item.Data.ma_luot_kham</td>
                                <td class="frozen-col frozen-col-3">@item.Data.last_name @item.Data.first_name</td>
                                <td class="frozen-col frozen-col-4">@item.Data.ngay_sinh?.ToString("dd/MM/yyyy")</td>
                                <td class="frozen-col frozen-col-5">@item.Data.gioi_tinh?.GetDescription()</td>
                                <td>@item.Data.tien_su_gia_dinh</td>
                                <td>@item.Data.ten_benh</td>
                                <td>@item.Data.chieu_cao</td>
                                <td>@item.Data.can_nang</td>
                                <td>@item.Data.bmi</td>
                                <td>@item.Data.mach</td>    
                                <td>@item.Data.huyet_ap</td>    
                                <td>@item.Data.kq_nk_tuan_hoan</td>    
                                <td>@item.Data.kq_nk_ho_hap</td>    
                                <td>@item.Data.kq_nk_tieu_hoa</td>    
                                <td>@item.Data.kq_nk_than_tiet_nieu</td>    
                                <td>@item.Data.kq_nk_noi_tiet</td>    
                                <td>@item.Data.kq_nk_co_xuong_khop</td>    
                                <td>@item.Data.kq_nk_than_kinh</td>    
                                <td>@item.Data.kq_nk_tam_than</td>    
                                <td>@item.Data.kq_ngoai_khoa</td>    
                                <td>@item.Data.ket_qua_san_phu_khoa</td>    
                                <td>@item.Data.benh_mat</td>    
                                <td>@item.Data.benh_tai_mui_hong</td>    
                                <td>@item.Data.benh_rhm</td>    
                                <td>@item.Data.kq_da_lieu</td>   
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Data.can_lam_sang_results))
                                    {
                                        var results = item.Data.can_lam_sang_results.Split('|');
                                        if (results.Length > 1)
                                        {
                                            @foreach (var result in results)
                                            {
                                                if(!string.IsNullOrEmpty(result.Trim()))
                                                {
                                                    <div>- @result.Trim()</div>
                                                }
                                            }
                                        }
                                        else
                                        {
                                            <div>@item.Data.can_lam_sang_results</div>
                                        }
                                    }
                                </td>
                                <td>@item.Data.phan_loai_suc_khoe</td>    
                                <td class="wrap-long-content">@item.Data.benh_tat_ket_luan?.Trim()</td>    
                                <td class="wrap-long-content">@item.Data.de_nghi?.Trim()</td>  
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <CoreAdminWeb.Shared.Components.Pagination Page="@Page" TotalPages="@TotalPages" PageSize="@PageSize" PageSizeChanged="OnPageSizeChanged" PageChanged="SelectedPage" />
        </div>
    </div>
</div>

<style>
.wrap-long-content {
    min-width: 600px;
    white-space: pre-wrap;
}

.frozen-columns-table {
    border-collapse: separate;
    border-spacing: 0;
}

.frozen-col {
    position: sticky;
    background-color: white;
    border-right: 2px solid #e5e7eb;
}

.dark .frozen-col {
    background-color: var(--tw-bg-darklight);
}

.frozen-col-1 { left: 0; min-width: 60px; }
.frozen-col-2 { left: 60px; min-width: 200px; }
.frozen-col-3 { left: 260px; min-width: 200px; }
.frozen-col-4 { left: 460px; min-width: 100px; }
.frozen-col-5 { left: 560px; min-width: 80px; }

.frozen-columns-table thead .frozen-col {
    background-color: #f9fafb;
}

.dark .frozen-columns-table thead .frozen-col {
    background-color: var(--tw-bg-gray-700);
}
</style>
