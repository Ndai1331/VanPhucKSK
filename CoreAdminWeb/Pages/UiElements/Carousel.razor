            </div>
        </div>
    </div>
</div>
<!-- End All Card -->

@code {
    private IJSObjectReference? _module;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                // Load Swiper JavaScript module
                _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "/assets/js/swiper-bundle.min.js");

                // Call JavaScript function to initialize Swiper
                await JsRuntime.InvokeVoidAsync("Swiperload");
            }
            catch (Exception ex)
            {
                // Handle any errors that may occur during JavaScript interop
                Console.WriteLine($"Error loading Swiper: {ex.Message}");
            }
        }
    }

    public async ValueTask DisposeAsync()
    {
        // Cleanup logic to dispose of JavaScript module reference
        if (_module != null)
        {
            await _module.DisposeAsync();
        }
    }
}
