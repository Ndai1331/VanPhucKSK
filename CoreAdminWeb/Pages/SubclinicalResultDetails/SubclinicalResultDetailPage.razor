        {
            AlertService?.ShowAlert("Vui l√≤ng nh·∫≠p CCCD", "warning");
            return;
        }

        try
        {
            _isLoading = true;
            _errorMessage = null;

            var userResult = await UserService.GetUserByCCCDAsync(_so_dinh_danh);
            if (userResult?.IsSuccess == true && userResult.Data != null)
