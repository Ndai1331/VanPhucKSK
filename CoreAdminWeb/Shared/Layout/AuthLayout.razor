@using CoreAdminWeb.Model
@using CoreAdminWeb.Model.Settings
@using CoreAdminWeb.Services
@using CoreAdminWeb.Services.Files
@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="vi" dir="ltr" class="group/item">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Hệ thống quản lý KCB" />
    <meta name="author" content="Hệ thống quản lý KCB" />
    <base href="~/" />

    <!-- Site Title -->
    <title>Đăng nhập | Khám sức khỏe - Kết quả KCB</title>

    <!-- Favicon Icon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- Google Fonts Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Bootstrap 5 & Font Awesome for Auth Pages -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="assets/css/page-login.css">
   

</head>

<body class="relative overflow-x-hidden text-sm antialiased font-normal text-black font-cerebri dark:text-white">
    @Body
    <!-- Blazor -->
    <script src="_framework/blazor.server.js"></script>
    
    <!-- Common utilities -->
    <script>
        // Dynamically set favicon for auth pages as well
        window.setFavicon = function (url) {
            try {
                var link = document.querySelector('link[rel~="icon"]') || document.querySelector('link[rel="shortcut icon"]');
                if (!link) {
                    link = document.createElement('link');
                    link.rel = 'shortcut icon';
                    link.type = 'image/x-icon';
                    document.getElementsByTagName('head')[0].appendChild(link);
                }
                link.href = url;
            } catch (e) {
                console.error('setFavicon error:', e);
            }
        };
        
        // Common utilities for auth pages
        window.togglePasswordVisibility = function(inputId) {
            const input = document.getElementById(inputId);
            const icon = input.nextElementSibling.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        };
        
        window.preventEnterKeyDefault = function(inputId) {
            const input = document.getElementById(inputId);
            if (input) {
                input.addEventListener('keydown', function(e) {
                    if (e.key === 'Enter' && !e.shiftKey) {
                        e.preventDefault();
                    }
                });
            }
        };
    </script>
</body>
</html>


@code {


    [Inject]
    private AlertService AlertService { get; set; } = default!; // DI
    [Inject]
    private CoreAdminWeb.Services.Settings.ISettingService SettingService { get; set; } = default!; // DI
    [Inject]
    private IFileService FileService { get; set; } = default!; // DI
    [Inject]
    private IJSRuntime JsRuntime { get; set; } = default!; // DI

    private SettingModel? Setting { get; set; }
    private FileModel? Logo { get; set; }
    private FileModel? Background { get; set; }
    private FileModel? FavIcon { get; set; }
    
    
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
    }
    
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadSettingsAndFaviconAsync();
        }
    }

    private async Task LoadSettingsAndFaviconAsync()
    {
        try
        {
            var settingResults = await SettingService.GetCurrentSettingAsync();
            if (settingResults.IsSuccess && settingResults.Data != null)
            {
                Setting = settingResults.Data;
                if (!string.IsNullOrEmpty(Setting.public_favicon))
                {
                    var favIconRes = await FileService.GetPublicFileAsync(Setting.public_favicon);
                    if (favIconRes.IsSuccess && favIconRes.Data != null)
                    {
                        FavIcon = favIconRes.Data;
                        var faviconUrl = !string.IsNullOrWhiteSpace(FavIcon.filename_disk) ? FavIcon.filename_disk : FavIcon.filename_download;
                        if (!string.IsNullOrWhiteSpace(faviconUrl))
                        {
                            await JsRuntime.InvokeVoidAsync("setFavicon", faviconUrl);
                        }
                    }
                }
            }
        }
        catch
        {
        }
    }

    private string FullYear { get; set; } = DateTime.Now.Year.ToString();
}
